        "domain.RecentAnime": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "image_url": {
                    "type": "string"
                },
                "latest_episode": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "domain.SyncAnime": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "latest_episode": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
